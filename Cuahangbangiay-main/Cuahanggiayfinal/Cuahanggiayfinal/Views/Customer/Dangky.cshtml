
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="author" content="Saurav">
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <title>Đăng kí người dùng</title>

</head>

<body class="bg-light">
    <div class="container">
        <div class="py-5 text-center">
            <img class="d-block mx-auto mb-4" src="~/Content/css/logo.jpg" alt="" width="72" height="72">
            <h2>Đăng kí Người dùng</h2>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    @using (Html.BeginForm())
                    {
                        @Html.ValidationSummary(true)
                    <div class="form-group">
                        <label for="exampleInputEmail1">Name</label>
                        <input type="text" class="form-control" id="firstName" placeholder="Hoten" name="Hoten" required>
                        @ViewData["Loi1"]
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Tài khoản</label>
                        <input type="text" class="form-control" id="firstName" placeholder="TaiKhoan...." name="TenDN" required>
                        @ViewData["Loi2"]
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Password</label>
                        <input type="password" class="form-control" id="firstName" placeholder="MatKhau...." name="Matkhau" required>
                        @ViewData["Loi3"]
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">nhập lại Password</label>
                        <input type="password" class="form-control" id="firstName" placeholder="MatKhau...." name="Matkhaunhaplai" required>
                        @ViewData["Loi4"]
                    </div>

                    <div class="form-group">
                        <label for="exampleInputPassword1">Email </label>
                        <input type="text" class="form-control" id="address" placeholder="email" name="Email" required>
                        <small class="form-text text-muted">Street Address</small>
                        @ViewData["Loi5"]
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">address</label>
                        <input type="text" class="form-control" id="firstName" placeholder="TaiKhoan...." name="Diachi" required>
                        @ViewData["Loi7"]
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Country</label>
                        <input type="text" class="form-control" id="firstName" placeholder="Dienthoai" name="country" required>
                        @ViewData["Loi9"]
                    </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Điện thoại</label>
                            <input type="text" class="form-control" id="firstName" placeholder="Dienthoai" name="DienThoai" required>
                            @ViewData["Loi6"]
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Thành Phố</label>
                            <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="City">
                            @ViewData["Loi8"]
                        </div>

                        <hr class="mb-4">
                        <button type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>
                    }
                </form>
            </div>
        </div>
        <footer class="my-5 pt-5 text-muted text-center text-small">
            <p class="mb-1">&copy; 2020-2021 Phú Nguyễn</p>
            <ul class="list-inline">
                <li class="list-inline-item"><a href="#">Privacy</a></li>
                <li class="list-inline-item"><a href="#">Terms</a></li>
                <li class="list-inline-item"><a href="#">Support</a></li>
            </ul>
        </footer>
    </div>
</body>
</html>

